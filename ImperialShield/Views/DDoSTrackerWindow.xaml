<Window x:Class="ImperialShield.Views.DDoSTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALERTA: TRÁFICO MASIVO - Imperial Shield" 
        Width="700" Height="550"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Storyboard x:Key="PulseIcon">
            <DoubleAnimation Storyboard.TargetName="AlertIcon" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.1" Duration="0:0:0.8" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="AlertIcon" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.1" Duration="0:0:0.8" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
        
        <Storyboard x:Key="BlinkAlert">
             <DoubleAnimation Storyboard.TargetName="AlertText" 
                              Storyboard.TargetProperty="Opacity"
                              From="1" To="0.3" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource BlinkAlert}"/>
            <BeginStoryboard Storyboard="{StaticResource PulseIcon}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="30" Background="#0A0F1E" BorderBrush="#00FF9D" BorderThickness="3" UseLayoutRounding="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" Color="#00FF9D" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Alert Icon -->
            <Image x:Name="AlertIcon" Source="/Resources/shield_alert_icon.png" 
                   Width="100" Height="100" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15">
                <Image.RenderTransform>
                    <ScaleTransform CenterX="50" CenterY="50"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#00FF9D" Opacity="0.9"/>
                </Image.Effect>
            </Image>

            <!-- Title -->
            <TextBlock x:Name="AlertText" Grid.Row="1" Text="¡ACTIVIDAD DE RED ANÓMALA!" 
                       Foreground="#00FF9D" FontSize="26" FontWeight="Black" 
                       HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,15">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="10" Color="#00FF9D" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Details Panel -->
            <Border Grid.Row="2" Background="#11221B" CornerRadius="12" Padding="20,15" Margin="0,5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="SE HA DETECTADO UN POSIBLE ATAQUE SALIENTE" 
                               Foreground="#00AA66" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="PROCESO:" Foreground="#558877" FontWeight="Bold"/>
                        <TextBlock x:Name="ProcessNameText" Grid.Column="1" Text="unknown.exe" 
                                   Foreground="White" FontWeight="Bold" FontSize="16"
                                   Cursor="Hand"
                                   ToolTip="Clic derecho para opciones">
                            <TextBlock.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Abrir ubicación del archivo" Click="OpenLocation_Click"/>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="OBJETIVO (IP):" Foreground="#558877" FontWeight="Bold"/>
                        <TextBlock x:Name="TargetIpText" Grid.Column="1" Text="192.168.1.1" 
                                   Foreground="#FF5555" FontWeight="Bold" FontSize="16"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="INTENSIDAD:" Foreground="#558877" FontWeight="Bold"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="ConnectionCountText" Text="532" 
                                       Foreground="#FFCC00" FontWeight="Black" FontSize="18"/>
                            <TextBlock Text=" conexiones simultáneas" Foreground="#99AA99" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Este comportamiento es típico de virus troyanos o botnets realizando ataques DDoS."
                               Foreground="#889988" FontSize="12" TextWrapping="Wrap" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Click="KillAndBlock_Click" 
                        Width="420" Height="45" Margin="0,0,0,10"
                        FontSize="14" FontWeight="Bold"
                        Background="#E11D48" Foreground="White" 
                        BorderThickness="0" Cursor="Hand">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⛔" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="TERMINAR Y BLOQUEAR" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FB7185"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="SOLO TERMINAR" Click="Kill_Click" 
                        Width="420" Height="45" Margin="0,0,0,10"
                        FontSize="13" FontWeight="Bold"
                        Background="#F39C12" Foreground="Black" 
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFBF40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="IGNORAR" Click="Close_Click" 
                        Width="420" Height="45"
                        FontSize="12" FontWeight="Bold"
                        Background="Transparent" Foreground="#558877" BorderBrush="#224433" BorderThickness="1">
                     <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                             <Style.Triggers>
                                 <Trigger Property="IsMouseOver" Value="True">
                                     <Setter Property="Foreground" Value="White"/>
                                     <Setter Property="BorderBrush" Value="#00FF9D"/>
                                 </Trigger>
                             </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

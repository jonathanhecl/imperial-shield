<Window x:Class="ImperialShield.Views.DDoSTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALERTA: TRÁFICO MASIVO - Imperial Shield" 
        Width="700" Height="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Storyboard x:Key="RadarScan">
            <DoubleAnimation Storyboard.TargetName="RadarSweep" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0" To="360" Duration="0:0:2" RepeatBehavior="Forever"/>
        </Storyboard>
        <Storyboard x:Key="BlinkAlert">
             <DoubleAnimation Storyboard.TargetName="AlertText" 
                              Storyboard.TargetProperty="Opacity"
                              From="1" To="0.3" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource RadarScan}"/>
            <BeginStoryboard Storyboard="{StaticResource BlinkAlert}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="30" Background="#0A0F1E" BorderBrush="#00FF9D" BorderThickness="3">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" Color="#00FF9D" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Radar / Icon Header -->
            <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Ellipse Width="100" Height="100" Stroke="#005533" StrokeThickness="2" Fill="#002211"/>
                <Ellipse Width="70" Height="70" Stroke="#005533" StrokeThickness="1"/>
                <Ellipse Width="30" Height="30" Stroke="#005533" StrokeThickness="1"/>
                
                <!-- Sweep Line -->
                <Line x:Name="RadarSweep" X1="50" Y1="50" X2="50" Y2="0" Stroke="#00FF9D" StrokeThickness="2" Opacity="0.8">
                    <Line.RenderTransform>
                        <RotateTransform CenterX="50" CenterY="50"/>
                    </Line.RenderTransform>
                    <Line.Effect>
                        <BlurEffect Radius="4"/>
                    </Line.Effect>
                </Line>
            </Grid>

            <!-- Title -->
            <TextBlock x:Name="AlertText" Grid.Row="1" Text="¡ACTIVIDAD DE RED ANÓMALA!" 
                       Foreground="#00FF9D" FontSize="26" FontWeight="Black" 
                       HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="10" Color="#00FF9D" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Details Panel -->
            <Border Grid.Row="2" Background="#11221B" CornerRadius="12" Padding="20" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="SE HA DETECTADO UN POSIBLE ATAQUE SALIENTE" 
                               Foreground="#00AA66" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="PROCESO:" Foreground="#558877" FontWeight="Bold"/>
                        <TextBlock x:Name="ProcessNameText" Grid.Column="1" Text="unknown.exe" 
                                   Foreground="White" FontWeight="Bold" FontSize="16"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="OBJETIVO (IP):" Foreground="#558877" FontWeight="Bold"/>
                        <TextBlock x:Name="TargetIpText" Grid.Column="1" Text="192.168.1.1" 
                                   Foreground="#FF5555" FontWeight="Bold" FontSize="16"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="INTENSIDAD:" Foreground="#558877" FontWeight="Bold"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="ConnectionCountText" Text="532" 
                                       Foreground="#FFCC00" FontWeight="Black" FontSize="18"/>
                            <TextBlock Text=" conexiones simultáneas" Foreground="#99AA99" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Este comportamiento es típico de virus troyanos o botnets realizando ataques DDoS."
                               Foreground="#667766" FontSize="11" TextWrapping="Wrap" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="TERMINAR PROCESO" Click="Kill_Click" 
                        Width="220" Height="50"
                        Style="{StaticResource DangerButton}" FontSize="14" FontWeight="Bold"/>
                
                <Button Content="IGNORAR" Click="Close_Click" 
                        Width="150" Height="50" Margin="15,0,0,0"
                        Background="Transparent" Foreground="#558877" BorderBrush="#224433" BorderThickness="1">
                     <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                             <Style.Triggers>
                                 <Trigger Property="IsMouseOver" Value="True">
                                     <Setter Property="Foreground" Value="White"/>
                                     <Setter Property="BorderBrush" Value="#00FF9D"/>
                                 </Trigger>
                             </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

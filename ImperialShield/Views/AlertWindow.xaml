<Window x:Class="ImperialShield.Views.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALERTA CRÍTICA - Imperial Shield" 
        Width="600" Height="480"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Pulse Animation for the Logo -->
        <Storyboard x:Key="PulseLogo">
            <DoubleAnimation Storyboard.TargetName="AlertImage" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.15" Duration="0:0:0.8" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="AlertImage" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.15" Duration="0:0:0.8" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
        
        <!-- Border Glow Animation -->
        <Storyboard x:Key="GlowBorder">
            <DoubleAnimation Storyboard.TargetName="AlertBorder" 
                             Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                             From="0.4" To="1.0" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- Window Entrance Animation -->
        <Storyboard x:Key="WindowEntrance">
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.8" To="1.0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.8" To="1.0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource PulseLogo}"/>
            <BeginStoryboard Storyboard="{StaticResource GlowBorder}"/>
            <BeginStoryboard Storyboard="{StaticResource WindowEntrance}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border x:Name="MainBorder" CornerRadius="30" Background="#0A0F1E" BorderBrush="#E11D48" BorderThickness="4" Opacity="0">
        <Border.RenderTransform>
            <ScaleTransform CenterX="300" CenterY="240"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect x:Name="AlertShadow" BlurRadius="60" ShadowDepth="0" Opacity="0.8" Color="#F43F5E"/>
        </Border.Effect>
        
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border x:Name="AlertBorder" Grid.RowSpan="4" Margin="-40" CornerRadius="30">
                 <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#F43F5E" Opacity="0.5"/>
                 </Border.Effect>
            </Border>

            <!-- Giant Red Shield Icon with Pulse -->
            <Image x:Name="AlertImage" Grid.Row="0" Source="/Resources/shield_alert_icon.png" 
                   Width="160" Height="160" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,25">
                <Image.RenderTransform>
                    <ScaleTransform CenterX="80" CenterY="80"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Color="#F43F5E" Opacity="0.9"/>
                </Image.Effect>
            </Image>
            
            <!-- Warning Title -->
            <TextBlock Grid.Row="1" Text="¡VIOLACIÓN DE SEGURIDAD!" 
                       Foreground="#F43F5E" 
                       FontWeight="ExtraBold" FontSize="34" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,15">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Detailed Message -->
            <TextBlock x:Name="MessageText" Grid.Row="2" 
                       Foreground="White" FontSize="20" 
                       FontWeight="SemiBold"
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       VerticalAlignment="Top" 
                       Margin="0,10"
                       LineHeight="28"/>
            
            <!-- Acknowledge Button -->
            <Button Grid.Row="3" Content="ENTIENDO EL RIESGO" 
                    Click="Close_Click" 
                    HorizontalAlignment="Center" 
                    Width="280" Height="55"
                    FontSize="20" FontWeight="Bold"
                    Background="#E11D48" Foreground="White" 
                    BorderThickness="0" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FB7185"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.4"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Border>
</Window>

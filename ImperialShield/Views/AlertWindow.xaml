<Window x:Class="ImperialShield.Views.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alerta de Seguridad" 
        Width="350" Height="180"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="Manual">
    
    <Border CornerRadius="12" Background="#0F172A" BorderBrush="#E11D48" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="#E11D48"/>
        </Border.Effect>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/shield_alert_icon.png" Width="24" Height="24" Margin="0,0,10,0"/>
                <TextBlock Text="âš  Alerta de Seguridad" Foreground="#F43F5E" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock x:Name="MessageText" Grid.Row="1" 
                       Foreground="White" FontSize="13" 
                       TextWrapping="Wrap" VerticalAlignment="Center" 
                       Margin="0,10"/>
            
            <Button Grid.Row="2" Content="Entendido" Click="Close_Click" 
                    HorizontalAlignment="Right" Width="80" Height="28"
                    Background="#1E293B" Foreground="White" BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>

<Window x:Class="ImperialShield.Views.BlockedExecutionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ›‘ EJECUCIÃ“N BLOQUEADA - Imperial Shield" 
        Width="600" Height="420"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Storyboard x:Key="PulseIcon">
            <DoubleAnimation Storyboard.TargetName="BlockIcon" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.1" Duration="0:0:0.6" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="BlockIcon" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.1" Duration="0:0:0.6" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
        
        <Storyboard x:Key="GlowBorder">
            <DoubleAnimation Storyboard.TargetName="GlowEffect" 
                             Storyboard.TargetProperty="Opacity"
                             From="0.4" To="0.9" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource PulseIcon}"/>
            <BeginStoryboard Storyboard="{StaticResource GlowBorder}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="20" Background="#0A0F1E" BorderBrush="#F39C12" BorderThickness="3">
        <Border.Effect>
            <DropShadowEffect x:Name="GlowEffect" BlurRadius="50" ShadowDepth="0" Opacity="0.7" Color="#F39C12"/>
        </Border.Effect>
        
        <Grid Margin="35">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Block Icon -->
            <TextBlock x:Name="BlockIcon" Grid.Row="0" Text="ðŸ›‘" FontSize="70" 
                       HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock.RenderTransform>
                    <ScaleTransform CenterX="35" CenterY="35"/>
                </TextBlock.RenderTransform>
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#F39C12" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Title -->
            <TextBlock Grid.Row="1" Text="Â¡EJECUCIÃ“N BLOQUEADA!" 
                       Foreground="#F39C12" 
                       FontWeight="ExtraBold" FontSize="26" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,15">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Message -->
            <StackPanel Grid.Row="2" VerticalAlignment="Top">
                <TextBlock Text="Imperial Shield ha interceptado un programa en cuarentena:" 
                           Foreground="#94A3B8" FontSize="14" TextAlignment="Center" Margin="0,0,0,15"/>
                
                <Border Background="#1B2838" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <TextBlock x:Name="ExeNameText" Text="malware.exe" 
                               Foreground="#E74C3C" FontSize="22" FontWeight="Bold" 
                               TextAlignment="Center"
                               ToolTip="Clic derecho para opciones"
                               Cursor="Hand">
                        <TextBlock.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Abrir gestiÃ³n de Cuarentena" Click="OpenQuarantine_Click"/>
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                </Border>
                
                <TextBlock Text="Este ejecutable estÃ¡ bloqueado por razones de seguridad y NO puede ejecutarse." 
                           Foreground="#708090" FontSize="12" TextAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ENTENDIDO" Click="Close_Click" 
                        Width="200" Height="50"
                        FontSize="16" FontWeight="Bold"
                        Background="#F39C12" Foreground="Black" 
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFBF40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Abrir Cuarentena" Click="OpenQuarantine_Click" 
                        Width="180" Height="50" Margin="15,0,0,0"
                        FontSize="14" FontWeight="SemiBold"
                        Background="Transparent" Foreground="#94A3B8" 
                        BorderThickness="1" BorderBrush="#3A5F82" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

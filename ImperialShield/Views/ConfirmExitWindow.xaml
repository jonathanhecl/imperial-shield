<Window x:Class="ImperialShield.Views.ConfirmExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DETENER DEFENSA - Imperial Shield" 
        Width="550" Height="480"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Storyboard x:Key="WindowEntrance">
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.8" To="1.0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.8" To="1.0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowEntrance}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border x:Name="MainBorder" CornerRadius="30" Background="#0A0F1E" BorderBrush="#E11D48" BorderThickness="3" Opacity="0" UseLayoutRounding="True">
        <Border.RenderTransform>
            <ScaleTransform CenterX="275" CenterY="240"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.5" Color="#E11D48"/>
        </Border.Effect>
        
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Warning Icon -->
            <TextBlock Grid.Row="0" Text="✖" FontSize="80" Foreground="#E11D48"
                       HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#E11D48" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Message -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="¿DETENER PROTECCIÓN?" 
                           Foreground="#E11D48" 
                           FontWeight="ExtraBold" FontSize="26" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,15"/>
                
                <TextBlock Foreground="#E2E8F0" FontSize="16" FontWeight="SemiBold"
                           TextWrapping="Wrap" TextAlignment="Center" LineHeight="24">
                    Estás a punto de cerrar Imperial Shield. <LineBreak/>
                    <Span Foreground="#94A3B8" FontSize="14">
                        El sistema dejará de monitorear tu seguridad y protección en tiempo real.
                    </Span>
                </TextBlock>
            </StackPanel>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Click="Confirm_Click" 
                        Width="350" Height="50" Margin="0,0,0,10"
                        Background="#E11D48" Foreground="White" 
                        BorderThickness="0" Cursor="Hand">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✖" Margin="0,0,10,0" VerticalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="SÍ, DETENER DEFENSA Y SALIR" VerticalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FB7185"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="CANCELAR (MANTENER PROTEGIDO)" 
                        Click="Cancel_Click" 
                        Width="350" Height="45"
                        FontSize="12" FontWeight="Bold"
                        Background="Transparent" Foreground="#94A3B8" 
                        BorderThickness="1" BorderBrush="#3A5F82" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

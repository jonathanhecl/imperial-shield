<Window x:Class="ImperialShield.Views.ConfirmExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar Salida" 
        Width="400" Height="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Border CornerRadius="15" Background="#0D1B2A" BorderBrush="#1E3A5F" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with Logo -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <Viewbox Width="30" Height="30">
                    <Canvas Width="100" Height="100">
                        <Path Fill="#1E3A5F" Data="M50,5 L90,20 L90,50 C90,75 70,90 50,95 C30,90 10,75 10,50 L10,20 Z"/>
                        <Path Fill="#2E5077" Data="M50,12 L82,24 L82,48 C82,70 65,82 50,87 C35,82 18,70 18,48 L18,24 Z"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="Confirmar Salida" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"/>
            </StackPanel>
            
            <!-- Message -->
            <TextBlock Grid.Row="1" 
                       Foreground="#E2E8F0" 
                       FontSize="14" 
                       TextWrapping="Wrap" 
                       LineHeight="20">
                ¿Estás seguro de que deseas cerrar Imperial Shield?<LineBreak/><LineBreak/>
                El sistema dejará de monitorear su seguridad y protección en tiempo real.
            </TextBlock>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancelar" 
                        Click="Cancel_Click"
                        Width="100" Height="35"
                        Background="Transparent"
                        Foreground="#94A3B8"
                        BorderBrush="#1E3A5F"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1E3A5F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Cerrar Sistema" 
                        Click="Confirm_Click"
                        Width="120" Height="35"
                        Background="#E11D48"
                        Foreground="White"
                        FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FB7185"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

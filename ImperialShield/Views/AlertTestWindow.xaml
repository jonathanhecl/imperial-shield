<Window x:Class="ImperialShield.Views.AlertTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prueba de Alertas (Desarrollo)" 
        Width="500" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    
    <Window.Resources>
        <Style x:Key="DevButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1A2838"/>
            <Setter Property="BorderBrush" Value="#3A5F82"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#253A4F"/>
                    <Setter Property="BorderBrush" Value="#4DA8DA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="#0A0F1E" BorderBrush="#FFCC00" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#FFCC00"/>
        </Border.Effect>
        
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ðŸ› ï¸ PANEL DE DESARROLLO" Foreground="#FFCC00" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="SimulaciÃ³n de Alertas del Sistema" Foreground="#94A3B8" FontSize="14" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- General Alerts -->
                    <TextBlock Text="Alertas GenÃ©ricas" Foreground="#4DA8DA" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Button Content="ðŸ›¡ï¸ Defender Desactivado" Click="TestDefenderOff_Click" Style="{StaticResource DevButtonStyle}"/>
                    <Button Content="ðŸ“ Archivo Hosts Modificado" Click="TestHosts_Click" Style="{StaticResource DevButtonStyle}"/>

                    <!-- Network Alerts -->
                    <TextBlock Text="Red y Malware" Foreground="#00FF9D" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Button Content="â˜ ï¸ Ataque DDoS Detectado" Click="TestDDoS_Click" Style="{StaticResource DevButtonStyle}"/>
                    <Button Content="ðŸ›‘ EjecuciÃ³n Bloqueada (IntercepciÃ³n)" Click="TestBlocked_Click" Style="{StaticResource DevButtonStyle}"/>

                    <!-- Privacy Alerts -->
                    <TextBlock Text="Privacidad" Foreground="#F43F5E" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Button Content="ðŸ“· CÃ¡mara Detectada" Click="TestPrivacyCamera_Click" Style="{StaticResource DevButtonStyle}"/>
                    <Button Content="ðŸŽ¤ MicrÃ³fono Detectado" Click="TestPrivacyMic_Click" Style="{StaticResource DevButtonStyle}"/>
                    
                    <!-- System Alerts -->
                    <TextBlock Text="Sistema" Foreground="#E74C3C" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Button Content="âš ï¸ Secuestro de Proceso (IFEO Rogue)" Click="TestSecurityWarning_Click" Style="{StaticResource DevButtonStyle}"/>
                    <Button Content="ðŸ“… Nueva Tarea Detectada" Click="TestNewTask_Click" Style="{StaticResource DevButtonStyle}"/>
                </StackPanel>
            </ScrollViewer>
            
            <Button Grid.Row="2" Content="CERRAR PANEL" Click="Close_Click" Margin="0,20,0,0" Height="40" Background="#1E3A5F" Foreground="White" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
    
</Window>

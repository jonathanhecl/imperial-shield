<Window x:Class="ImperialShield.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Imperial Shield"
        Width="400" Height="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Border CornerRadius="20" Background="#0D1B2A">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.8" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <!-- Shield Icon -->
            <Viewbox Grid.Row="0" Width="120" Height="120" Margin="0,30,0,0">
                <Canvas Width="100" Height="100">
                    <!-- Shield Shape -->
                    <Path Fill="#1E3A5F" Data="M50,5 L90,20 L90,50 C90,75 70,90 50,95 C30,90 10,75 10,50 L10,20 Z"/>
                    <!-- Inner Shield -->
                    <Path Fill="#2E5077" Data="M50,12 L82,24 L82,48 C82,70 65,82 50,87 C35,82 18,70 18,48 L18,24 Z"/>
                    <!-- Checkmark -->
                    <Path Stroke="#4DA8DA" StrokeThickness="6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"
                          Data="M30,50 L45,65 L70,35"/>
                </Canvas>
            </Viewbox>
            
            <!-- Title -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Imperial Shield" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de Seguridad" 
                           FontSize="14" 
                           Foreground="#94A3B8" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Loading indicator -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock x:Name="StatusText" 
                           Text="Inicializando..." 
                           FontSize="12" 
                           Foreground="#4DA8DA" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Version -->
            <TextBlock Grid.Row="3" 
                       x:Name="VersionText"
                       Text="v1.0.0.0" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#4DA8DA" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>

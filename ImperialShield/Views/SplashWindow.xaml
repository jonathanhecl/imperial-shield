<Window x:Class="ImperialShield.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Imperial Shield"
        Width="400" Height="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Border CornerRadius="20" Background="#0D1B2A">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.8" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <!-- Shield Logo -->
            <Image Grid.Row="0" Source="/Resources/shield.png" 
                   Width="130" Height="130" Margin="0,30,0,0"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            
            <!-- Title -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Imperial Shield" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de Seguridad" 
                           FontSize="14" 
                           Foreground="#94A3B8" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Loading indicator -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock x:Name="StatusText" 
                           Text="Inicializando..." 
                           FontSize="12" 
                           Foreground="#4DA8DA" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Version -->
            <TextBlock Grid.Row="3" 
                       x:Name="VersionText"
                       Text="v1.0.0.0" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="#4DA8DA" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>

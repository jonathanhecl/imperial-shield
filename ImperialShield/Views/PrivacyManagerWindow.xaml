        Title="ðŸ›¡ï¸ Centro de Privacidad" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <ContextMenu x:Key="RowContextMenu">
            <MenuItem Header="ðŸ“‚ Ver ubicaciÃ³n del archivo" Click="OpenLocation_Click"/>
            <MenuItem Header="ðŸ“‹ Copiar ruta completa" Click="CopyPath_Click"/>
        </ContextMenu>
        
        <Style x:Key="PrivacyRowStyle" TargetType="DataGridRow">
            <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Padding="25" Background="{StaticResource EpicHeaderGradient}" BorderBrush="#4DA8DA" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ‘ï¸" FontSize="36" Margin="0,0,20,0" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="CENTRO DE PRIVACIDAD" FontSize="22" FontWeight="Bold" Foreground="#4DA8DA"/>
                    <TextBlock Text="Controla quÃ© aplicaciones pueden acceder a tu hardware" Foreground="#94A3B8"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="15">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1" BorderBrush="#3A5F82" CornerRadius="6,6,0,0" Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="15,8"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#0F1C2E" />
                                        <Setter Property="Foreground" Value="#94A3B8" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="ðŸ“· CÃMARA">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#16202C" Padding="12" CornerRadius="6" Margin="0,0,0,15" BorderBrush="#3A5F82" BorderThickness="1">
                        <TextBlock Text="Aplicaciones con acceso a tu CÃMARA" Foreground="#E8F4FC" FontWeight="SemiBold"/>
                    </Border>

                    <DataGrid x:Name="CameraGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                              Background="Transparent" RowBackground="#0D1B2A" AlternatingRowBackground="#162232"
                              HeadersVisibility="Column" GridLinesVisibility="None" BorderThickness="0"
                              RowStyle="{StaticResource PrivacyRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="AplicaciÃ³n" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DisplayName}" Foreground="White" VerticalAlignment="Center" Padding="8,4" ToolTip="{Binding AppId}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Ãšltimo Uso" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LastActivity}" Foreground="#B0C4DE" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Estado" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StatusText}" FontWeight="Bold" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#708090"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                            <Setter Property="Foreground" Value="#4DA8DA"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActiveRisk}" Value="True">
                                                            <Setter Property="Foreground" Value="#E74C3C"/> 
                                                            <Setter Property="Text" Value="ðŸ”´ EN USO"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Acciones" Width="240">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Revocar" Click="Revoke_Click" Margin="0,0,8,0"
                                                    Style="{StaticResource DangerButton}" FontSize="11" Padding="10,4"
                                                    Tag="{Binding}"/>
                                            <Button Content="Matar" Click="Kill_Click"
                                                    Style="{StaticResource ModernButton}" Background="#3A5F82" FontSize="11" Padding="10,4"
                                                    Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="ðŸŽ¤ MICRÃ“FONO">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#16202C" Padding="12" CornerRadius="6" Margin="0,0,0,15" BorderBrush="#3A5F82" BorderThickness="1">
                        <TextBlock Text="Aplicaciones con acceso a tu MICRÃ“FONO" Foreground="#E8F4FC" FontWeight="SemiBold"/>

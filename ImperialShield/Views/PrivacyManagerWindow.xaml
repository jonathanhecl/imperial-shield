                <StackPanel>
                    <TextBlock Text="LEYENDA DE SEGURIDAD" Foreground="#64748B" FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ›¡ï¸" FontSize="11" Margin="0,0,3,0"/>
                            <TextBlock Text="Confiable" Foreground="#4DA8DA" FontSize="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                            <TextBlock Text="âœ…" FontSize="11" Margin="0,0,3,0"/>
                            <TextBlock Text="Seguro" Foreground="#22C55E" FontSize="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                            <TextBlock Text="ðŸŸ¡" FontSize="11" Margin="0,0,3,0"/>
                            <TextBlock Text="Sin Firma" Foreground="#EAB308" FontSize="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”´" FontSize="11" Margin="0,0,3,0"/>
                            <TextBlock Text="Sospechoso" Foreground="#EF4444" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#1E293B" CornerRadius="8,8,0,0" Margin="0,0,4,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="20,10"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#1E293B" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#0A0F1E" />
                                        <Setter Property="Foreground" Value="#64748B" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- CÃ¡mara -->
            <TabItem Header="ðŸ“· CÃMARA">
                <Border Style="{StaticResource CardBorder}" Background="#0A0F1E" Padding="0" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Background="#111827" Padding="15,12" BorderBrush="#1E293B" BorderThickness="0,0,0,1">
                            <TextBlock Text="APLICACIONES CON ACCESO A LA CÃMARA" Foreground="#64748B" FontSize="11" FontWeight="Bold"/>
                        </Border>

                        <DataGrid x:Name="CameraGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                                  Background="Transparent" RowBackground="Transparent" AlternatingRowBackground="#0F172A"
                                  HeadersVisibility="Column" GridLinesVisibility="None" BorderThickness="0"
                                  RowStyle="{StaticResource PrivacyRowStyle}" UseLayoutRounding="True">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#111827"/>
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#1E293B"/>
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#1E3A5F"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <!-- Threat Icon -->
                                <DataGridTemplateColumn Header="" Width="45">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ThreatIcon}" FontSize="16" HorizontalAlignment="Center" 
                                                       ToolTip="{Binding ThreatText}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Application Name -->
                                <DataGridTemplateColumn Header="APLICACIÃ“N" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" Foreground="White" 
                                                           FontSize="13" Cursor="Hand" MouseLeftButtonDown="OpenLocation_Click"
                                                           ToolTip="{Binding AppId}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding StatusText}" FontSize="11" Margin="0,2,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#64748B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActiveRisk}" Value="True">
                                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                                    <Setter Property="Foreground" Value="#4DA8DA"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Signature -->
                                <DataGridTemplateColumn Header="FIRMA DIGITAL" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SignatureText}" Foreground="{Binding SignatureColor}" 
                                                       VerticalAlignment="Center" FontSize="12" TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Publisher}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Last Activity -->
                                <DataGridTemplateColumn Header="ÃšLTIMO USO" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LastActivity}" Foreground="#94A3B8" VerticalAlignment="Center" FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Actions -->
                                <DataGridTemplateColumn Header="ACCIONES" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="Revocar" Click="Revoke_Click" 
                                                        Style="{StaticResource RevokeButton}"
                                                        Margin="0,0,6,0" Tag="{Binding}"/>
                                                <Button Content="Terminar" Click="Terminate_Click"
                                                        Style="{StaticResource TerminateButton}"
                                                        Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                        Tag="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- MicrÃ³fono -->
            <TabItem Header="ðŸŽ¤ MICRÃ“FONO">
                <Border Style="{StaticResource CardBorder}" Background="#0A0F1E" Padding="0" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Background="#111827" Padding="15,12" BorderBrush="#1E293B" BorderThickness="0,0,0,1">
                            <TextBlock Text="APLICACIONES CON ACCESO AL MICRÃ“FONO" Foreground="#64748B" FontSize="11" FontWeight="Bold"/>
                        </Border>

                        <DataGrid x:Name="MicGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                                  Background="Transparent" RowBackground="Transparent" AlternatingRowBackground="#0F172A"
                                  HeadersVisibility="Column" GridLinesVisibility="None" BorderThickness="0"
                                  RowStyle="{StaticResource PrivacyRowStyle}" UseLayoutRounding="True">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#111827"/>
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#1E293B"/>
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#1E3A5F"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>

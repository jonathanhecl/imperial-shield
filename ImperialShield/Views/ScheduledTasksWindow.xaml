<Window x:Class="ImperialShield.Views.ScheduledTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monitor de Tareas - Imperial Shield" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Filter Toggle Button Style -->
        <Style x:Key="FilterToggle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E3A5F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4DA8DA"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A2744"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <ContextMenu x:Key="RowContextMenu">
            <MenuItem Header="â–¶ Ejecutar tarea" Click="Run_Click"/>
            <MenuItem Header="â¹ Detener tarea" Click="Stop_Click"/>
            <Separator/>
            <MenuItem Header="âŒ Deshabilitar" Click="Disable_Click"/>
            <MenuItem Header="âœ… Habilitar" Click="Enable_Click"/>
        </ContextMenu>
        
        <Style x:Key="TaskRowStyle" TargetType="DataGridRow">
            <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding NormalizedState}" Value="Disabled">
                    <Setter Property="Opacity" Value="0.7"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“… Tareas Programadas" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,15,0"/>
                <Border Background="#213346" CornerRadius="12" Padding="12,4" VerticalAlignment="Center">
                    <TextBlock Text="Gestor de Tareas de Windows" Foreground="#4DA8DA" FontWeight="Bold" FontSize="12"/>
                </Border>
            </StackPanel>
            <TextBlock Text="Visualiza, ejecuta o detÃ©n las tareas programadas del sistema." 
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="#0F172A" CornerRadius="12" Padding="15,12" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <ToggleButton x:Name="FilterAll" Content="Todas" Style="{StaticResource FilterToggle}" 
                                  IsChecked="True" Click="Filter_Click"/>
                    <ToggleButton x:Name="FilterRunning" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#4DA8DA" Margin="0,0,6,0"/>
                            <TextBlock Text="Ejecutando"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="FilterReady" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#22C55E" Margin="0,0,6,0"/>
                            <TextBlock Text="Listas"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="FilterDisabled" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#64748B" Margin="0,0,6,0"/>
                            <TextBlock Text="Deshabilitadas"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="FilterSuspicious" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#EF4444" Margin="0,0,6,0"/>
                            <TextBlock Text="Sospechosas"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>

                <!-- Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatsText" Text="0 tareas" Foreground="#64748B" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Background="#0A0F1E" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Background="#111827" Padding="15,12" BorderBrush="#1E293B" BorderThickness="0,0,0,1">
                    <TextBlock Text="LISTA DE TAREAS DEL SISTEMA" Foreground="#64748B" FontSize="11" FontWeight="Bold"/>
                </Border>

                <!-- Loading Overlay -->
                <Grid Grid.Row="1" x:Name="LoadingOverlay" Panel.ZIndex="10" Background="#0A0F1E" Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="âŸ³" FontSize="40" Foreground="#4DA8DA" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="SpinData" Angle="0" />
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SpinData" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock Text="Analizando seguridad de tareas..." Foreground="#94A3B8" Margin="0,15,0,0" FontSize="14"/>
                    </StackPanel>
                </Grid>

                <DataGrid x:Name="TasksGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                          Background="Transparent" RowBackground="Transparent" AlternatingRowBackground="#0F172A"
                          HeadersVisibility="Column" GridLinesVisibility="None" BorderThickness="0"
                          RowStyle="{StaticResource TaskRowStyle}" UseLayoutRounding="True">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#111827"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#1E293B"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#1E3A5F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!-- Threat Icon -->
                        <DataGridTemplateColumn Header="" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ThreatIcon}" FontSize="16" HorizontalAlignment="Center" 
                                               ToolTip="{Binding ThreatLevelText}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Task Name & Path -->
                        <DataGridTemplateColumn Header="TAREA / RUTA" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding TaskName}" FontWeight="Bold" Foreground="White" 
                                                   FontSize="13" ToolTip="{Binding TaskPath}"/>
                                        <TextBlock Text="{Binding TaskPath}" FontSize="11" Foreground="#64748B" 
                                                   TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- State -->
                        <DataGridTemplateColumn Header="ESTADO" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#111827" CornerRadius="4" Padding="8,2" HorizontalAlignment="Left"
                                            BorderBrush="{Binding StateColor}" BorderThickness="1">
                                        <TextBlock Text="{Binding TranslatedState}" Foreground="{Binding StateColor}" 
                                                   FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Next Run -->
                        <DataGridTemplateColumn Header="PRÃ“XIMA EJECUCIÃ“N" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NextRunText}" Foreground="#94A3B8" VerticalAlignment="Center" FontSize="12"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="ACCIONES" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Run/Stop Button -->
                                        <Button Click="RunOrStop_Click" Width="85" Height="28"
                                                FontSize="11" FontWeight="Bold" Margin="0,0,6,0" Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Foreground" Value="#4DA8DA"/>
                                                    <Setter Property="Content" Value="Ejecutar"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#1E3A5F" BorderThickness="1">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#2E5077"/>
                                                                        <Setter TargetName="border" Property="BorderBrush" Value="#4DA8DA"/>
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NormalizedState}" Value="Running">
                                                            <Setter Property="Content" Value="Detener"/>
                                                            <Setter Property="Foreground" Value="#EF4444"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#451A1A" BorderThickness="1">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="border" Property="Background" Value="#B91C1C"/>
                                                                                <Setter TargetName="border" Property="BorderBrush" Value="#EF4444"/>
                                                                                <Setter Property="Foreground" Value="White"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Enable/Disable Button -->
                                        <Button Click="ToggleEnabled_Click" Width="85" Height="28"
                                                FontSize="11" FontWeight="Bold" Margin="0,0,0,0" Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                    <Setter Property="Content" Value="Deshabilitar"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#78350F" BorderThickness="1">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#B45309"/>
                                                                        <Setter TargetName="border" Property="BorderBrush" Value="#F59E0B"/>
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NormalizedState}" Value="Disabled">
                                                            <Setter Property="Content" Value="Habilitar"/>
                                                            <Setter Property="Foreground" Value="#22C55E"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#14532D" BorderThickness="1">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="border" Property="Background" Value="#15803D"/>
                                                                                <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                                                                                <Setter Property="Foreground" Value="White"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#111827" CornerRadius="0,0,8,8" Padding="20,15" Margin="0,15,0,0" BorderBrush="#1E293B" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="#22C55E" Margin="0,0,12,0"/>
                    <TextBlock x:Name="LastUpdatedText" Text="Ãšltima actualizaciÃ³n: --:--" Foreground="#94A3B8" FontSize="13" FontWeight="Medium"/>
                    <TextBlock Text=" | Total: " Foreground="#64748B" FontSize="13" Margin="10,0,0,0"/>
                    <TextBlock x:Name="TaskCountText" Text="0" Foreground="#E8F4FC" FontSize="13" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Actualizar" Click="Refresh_Click"
                            Width="120" Height="38" Margin="0,0,12,0" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#334155" BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#2E5077"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#4DA8DA"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#4DA8DA"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ“… Abrir Programador" Click="OpenScheduler_Click"
                            Width="170" Height="38" Margin="0,0,12,0" FontWeight="Bold"
                            ToolTip="Abre el Programador de Tareas de Windows nativo">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#334155" BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#2E5077"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#4DA8DA"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Cerrar" Click="Close_Click" Style="{StaticResource ModernButton}" 
                            Width="100" Height="38" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

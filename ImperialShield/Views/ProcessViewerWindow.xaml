<Window x:Class="ImperialShield.Views.ProcessViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ðŸ” Imperial Shield - Visor de Procesos" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="ðŸ›¡ï¸ Visor de Procesos Inteligente" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="AnÃ¡lisis de procesos con verificaciÃ³n de firma digital y detecciÃ³n de amenazas" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ”„ Actualizar" Style="{StaticResource ModernButton}" 
                            Click="RefreshButton_Click" Margin="0,0,10,0"/>
                    <Button x:Name="FilterButton" Content="ðŸ” Solo Sospechosos" 
                            Style="{StaticResource ModernButton}" Click="FilterButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,20" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock x:Name="TotalProcessesText" Text="0" FontSize="28" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Total Procesos" Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock x:Name="CriticalText" Text="0" FontSize="28" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="{StaticResource DangerBrush}"/>
                    <TextBlock Text="CrÃ­ticos" Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock x:Name="HighText" Text="0" FontSize="28" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="#E67E22"/>
                    <TextBlock Text="Alto Riesgo" Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock x:Name="MediumText" Text="0" FontSize="28" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="{StaticResource WarningBrush}"/>
                    <TextBlock Text="Medio" Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock x:Name="SafeText" Text="0" FontSize="28" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="{StaticResource SuccessBrush}"/>
                    <TextBlock Text="Seguros" Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Process List -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="0">
            <DataGrid x:Name="ProcessGrid" 
                      ItemsSource="{Binding Processes}"
                      SelectedItem="{Binding SelectedProcess}"
                      MouseDoubleClick="ProcessGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nivel" Binding="{Binding ThreatLevelIcon}" Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="18"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="70"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="Ruta" Binding="{Binding Path}" Width="350"/>
                    <DataGridTextColumn Header="Firma" Binding="{Binding SignatureStatus}" Width="120"/>
                    <DataGridTextColumn Header="Memoria (MB)" Binding="{Binding MemoryMB, StringFormat=N1}" Width="100"/>
                    <DataGridTextColumn Header="Inicio" Binding="{Binding StartTime, StringFormat=HH:mm:ss}" Width="80"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ThreatLevel}" Value="Critical">
                                <Setter Property="Background" Value="#4DE74C3C"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ThreatLevel}" Value="High">
                                <Setter Property="Background" Value="#4DE67E22"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ThreatLevel}" Value="Medium">
                                <Setter Property="Background" Value="#4DF39C12"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="ðŸ” Ver Detalles" Click="ViewDetails_Click"/>
                        <MenuItem Header="ðŸ“‚ Abrir UbicaciÃ³n" Click="OpenLocation_Click"/>
                        <Separator/>
                        <MenuItem Header="âŒ Terminar Proceso" Click="KillProcess_Click" 
                                  Foreground="#E74C3C" FontWeight="Bold"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Margin="0,20,0,0" Padding="10" Background="{StaticResource SurfaceBrush}" CornerRadius="8">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Listo" 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="LastUpdateText" Text="Ãšltima actualizaciÃ³n: --:--:--" 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>

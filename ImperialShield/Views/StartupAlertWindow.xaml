<Window x:Class="ImperialShield.Views.StartupAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALERTA DE INICIO - Imperial Shield" 
        Width="650" Height="550"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Storyboard x:Key="PulseIcon">
            <DoubleAnimation Storyboard.TargetName="AlertIcon" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.2" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="AlertIcon" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.2" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource PulseIcon}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="25" Background="#0A0F1E" BorderBrush="#E74C3C" BorderThickness="4">
        <Border.Effect>
            <DropShadowEffect BlurRadius="50" ShadowDepth="0" Color="#E74C3C" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid Margin="35">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Alert Icon -->
            <Image x:Name="AlertIcon" Source="/Resources/shield_alert_icon.png" 
                   Width="100" Height="100" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15">
                <Image.RenderTransform>
                    <ScaleTransform CenterX="50" CenterY="50"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#E74C3C" Opacity="0.9"/>
                </Image.Effect>
            </Image>
            
            <!-- Title -->
            <TextBlock Grid.Row="1" Text="¡NUEVA APLICACIÓN DE INICIO!" 
                       Foreground="#E74C3C" 
                       FontWeight="ExtraBold" FontSize="26" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Details -->
            <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,10">
                <TextBlock x:Name="WarningDesc" Text="Se ha detectado que una aplicación se ha configurado para iniciar automáticamente con Windows." 
                           Foreground="#94A3B8" FontSize="15" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,20"/>
                
                <Border Background="#16202C" CornerRadius="10" Padding="15" BorderBrush="#3A5F82" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Aplicación detectada:" Foreground="White" FontSize="12" Opacity="0.7"/>
                        <TextBlock x:Name="AppNameText" Text="Loading..." Foreground="#4DA8DA" FontSize="18" FontWeight="Bold" Margin="0,2,0,10" TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Ubicación:" Foreground="White" FontSize="12" Opacity="0.7"/>
                        <TextBlock x:Name="LocationText" Text="Registro de Windows (Run)" 
                                   Foreground="#CCCCCC" FontSize="13" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,10" />

                        <TextBlock Text="Ruta del ejecutable:" Foreground="White" FontSize="12" Opacity="0.7"/>
                        <TextBlock x:Name="PathText" Text="No disponible" 
                                   Foreground="#CCCCCC" FontSize="13" FontWeight="SemiBold" TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                
                <TextBlock Text="⚠️ Muchos virus y programas no deseados (PUPs) usan este método para persistir. Deshabilítala si no la reconoces." 
                           Foreground="#F39C12" FontSize="11" Margin="0,20,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="DESHABILITAR (Recomendado)" Click="Disable_Click" 
                        Width="420" Height="55" Margin="0,0,0,10"
                        FontSize="18" FontWeight="Bold"
                        Style="{StaticResource DangerButton}" Cursor="Hand"/>
                
                <Button Content="IGNORAR" Click="Ignore_Click" 
                        Width="420" Height="55" 
                        FontSize="16" FontWeight="Bold"
                        Background="Transparent" Foreground="#94A3B8" 
                        BorderThickness="1" BorderBrush="#3A5F82" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

<Window x:Class="ImperialShield.Views.SecurityWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALERTA DE SEGURIDAD - Imperial Shield" 
        Width="650" Height="480"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">
    
    <Window.Resources>
        <Storyboard x:Key="PulseWarning">
            <DoubleAnimation Storyboard.TargetName="IconText" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.2" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="IconText" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.2" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource PulseWarning}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="25" Background="#0A0F1E" BorderBrush="#E74C3C" BorderThickness="4">
        <Border.Effect>
            <DropShadowEffect BlurRadius="50" ShadowDepth="0" Color="#E74C3C" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid Margin="35">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Warning Icon -->
            <TextBlock x:Name="IconText" Grid.Row="0" Text="⚠️" FontSize="80" 
                       HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock.RenderTransform>
                    <ScaleTransform CenterX="40" CenterY="40"/>
                </TextBlock.RenderTransform>
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#E74C3C" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Title -->
            <TextBlock Grid.Row="1" Text="¡MODIFICACIÓN DEL SISTEMA DETECTADA!" 
                       Foreground="#E74C3C" 
                       FontWeight="ExtraBold" FontSize="26" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Details -->
            <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,10">
                <TextBlock x:Name="WarningDesc" Text="Se ha detectado una redirección de ejecutable (IFEO) no autorizada." 
                           Foreground="#94A3B8" FontSize="15" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,20"/>
                
                <Border Background="#16202C" CornerRadius="10" Padding="15" BorderBrush="#3A5F82" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Ejecutable afectado:" Foreground="White" FontSize="12" Opacity="0.7"/>
                        <TextBlock x:Name="TargetExeText" Text="chrome.exe" Foreground="#4DA8DA" FontSize="18" FontWeight="Bold" Margin="0,2,0,10"/>
                        
                        <TextBlock Text="Redirigido a (Debugger):" Foreground="White" FontSize="12" Opacity="0.7"/>
                        <TextBlock x:Name="DebuggerPathText" Text="C:\Windows\temp\virus.exe" 
                                   Foreground="#E74C3C" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"
                                   ToolTip="Clic derecho para opciones"
                                   Cursor="Hand">
                            <TextBlock.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Abrir ubicación del archivo" Click="OpenDebuggerLocation_Click"/>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="⚠️ Esto significa que cada vez que intentes abrir el programa afectado, se ejecutará el segundo archivo en su lugar." 
                           Foreground="#F39C12" FontSize="11" Margin="0,20,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="ELIMINAR REDIRECCIÓN" Click="Action_Click" 
                        Width="280" Height="55"
                        FontSize="18" FontWeight="Bold"
                        Style="{StaticResource DangerButton}" Cursor="Hand"/>
                
                <Button Content="IGNORAR" Click="Ignore_Click" 
                        Width="180" Height="55" Margin="15,0,0,0"
                        FontSize="16" FontWeight="Bold"
                        Background="Transparent" Foreground="#94A3B8" 
                        BorderThickness="1" BorderBrush="#3A5F82" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

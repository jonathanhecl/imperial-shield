<Window x:Class="ImperialShield.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfiguraciÃ³n - Imperial Shield" 
        Width="450" Height="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    
    <Border CornerRadius="20" Background="#0D1B2A" BorderBrush="#1E3A5F" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>
        
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Viewbox Width="35" Height="35">
                    <Canvas Width="100" Height="100">
                        <Path Fill="#4DA8DA" Data="M50,5 L90,20 L90,50 C90,75 70,90 50,95 C30,90 10,75 10,50 L10,20 Z"/>
                        <Path Fill="#0D1B2A" Data="M50,12 L82,24 L82,48 C82,70 65,82 50,87 C35,82 18,70 18,48 L18,24 Z"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="ConfiguraciÃ³n" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>
            
            <!-- Content -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Frecuencia de Escaneo" Foreground="#94A3B8" FontSize="14" Margin="0,0,0,10"/>
                <ComboBox x:Name="IntervalComboBox" 
                          Background="#1E3A5F" Foreground="White" 
                          BorderBrush="#4DA8DA" BorderThickness="1"
                          Padding="10" FontSize="14">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#1E3A5F"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4DA8DA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBoxItem Content="30 segundos" Tag="30000"/>
                    <ComboBoxItem Content="1 minuto" Tag="60000"/>
                    <ComboBoxItem Content="3 minutos" Tag="180000"/>
                    <ComboBoxItem Content="5 minutos" Tag="300000"/>
                    <ComboBoxItem Content="10 minutos" Tag="600000"/>
                    <ComboBoxItem Content="30 minutos" Tag="1800000"/>
                    <ComboBoxItem Content="1 hora" Tag="3600000"/>
                </ComboBox>
                
                <CheckBox x:Name="StartupCheckBox" Content="Iniciar Imperial Shield con Windows" 
                          Foreground="White" FontSize="14" Margin="0,15,0,0"
                          VerticalContentAlignment="Center"/>

                <Separator Background="#1E3A5F" Margin="0,20"/>
                
                <TextBlock Text="Control de Inicio y Pruebas" Foreground="#94A3B8" FontSize="14" Margin="0,0,0,10"/>
                
                <Button Content="ðŸ“‹ Ver Aplicaciones de Inicio" 
                        Click="ViewStartupApps_Click"
                        Height="35" Background="Transparent" Foreground="#4DA8DA" BorderBrush="#4DA8DA" BorderThickness="1"
                        Margin="0,0,0,10">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#104DA8DA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="ðŸš¨ Probar Ventana de Alerta" 
                        Click="TestAlert_Click"
                        Height="35" Background="Transparent" Foreground="#F43F5E" BorderBrush="#F43F5E" BorderThickness="1">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#10F43F5E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancelar" Click="Cancel_Click" Margin="0,0,10,0" Width="80" Foreground="#94A3B8" Background="Transparent" BorderThickness="0"/>
                <Button Content="Guardar" Click="Save_Click" Width="100" Height="35" Background="#4DA8DA" Foreground="White" FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

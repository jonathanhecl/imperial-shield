                                        <TextBlock Text="ðŸ“œ" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Mapeo de Nombres de Dominio (HOSTS)" Foreground="#94A3B8" VerticalAlignment="Center" Grid.Column="1"/>

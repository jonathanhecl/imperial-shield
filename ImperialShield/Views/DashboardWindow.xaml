                                            <TextBlock x:Name="CheckDefenseTime" Text="--" Foreground="#E8F4FC" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Hosts -->
                                <Border Background="#0D1B2A" CornerRadius="6" Padding="12,8" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>

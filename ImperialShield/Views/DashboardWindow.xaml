                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="Privacy_Click" ToolTip="Centro de Privacidad">
                                <StackPanel>
                                    <TextBlock Text="ðŸ‘ï¸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="PRIVACIDAD" FontSize="9" HorizontalAlignment="Center" Foreground="#7EB8DC"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="Quarantine_Click" ToolTip="Centro de Cuarentena">
                                <StackPanel>
                                    <TextBlock Text="ðŸ”’" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="CUARENTENA" FontSize="9" HorizontalAlignment="Center" Foreground="#7EB8DC"/>
                                </StackPanel>
                            </Button>


                        </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Monitoring Status Panel -->
                    <Border Grid.Column="1" Style="{StaticResource RPGCard}" Margin="10,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="h" FontFamily="Webdings" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#4DA8DA"/>
                                <TextBlock Text="MONITOREO ACTIVO" FontSize="18" FontWeight="Bold" 
                                           Foreground="#4DA8DA" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Check List -->
                            <StackPanel>
                                <!-- Defensa -->
                                <Border Background="#0D1B2A" CornerRadius="6" Padding="12,8" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ›¡ï¸" Margin="0,0,10,0" VerticalAlignment="Center"/>

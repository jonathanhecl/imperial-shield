<Window x:Class="ImperialShield.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="âš”ï¸ Imperial Shield - Centro de Comando" 
        Height="850" Width="1100"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">

    <Window.Resources>
        <!-- RPG-Style Gradients -->
        <LinearGradientBrush x:Key="EpicHeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0a1628" Offset="0"/>
            <GradientStop Color="#1a3a5c" Offset="0.5"/>
            <GradientStop Color="#0d2847" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GoldAccent" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#B8860B" Offset="0"/>
            <GradientStop Color="#FFD700" Offset="0.5"/>
            <GradientStop Color="#B8860B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ShieldGlow" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#4DA8DA" Offset="0"/>
            <GradientStop Color="#1E5A82" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1B3044" Offset="0"/>
            <GradientStop Color="#0F1C2E" Offset="1"/>
        </LinearGradientBrush>

        <!-- RPG Card Style -->
        <Style x:Key="RPGCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="BorderBrush" Value="#3A5F82"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.5" Color="#000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1E3A5F" Offset="0"/>
                        <GradientStop Color="#0D1B2A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#4DA8DA"/>
            <Setter Property="BorderThickness" Value="1,1,1,3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4" Color="#4DA8DA"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button RPG Style -->
        <Style x:Key="RPGButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2E5077" Offset="0"/>
                        <GradientStop Color="#1E3A5F" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#E8F4FC"/>
            <Setter Property="BorderBrush" Value="#4DA8DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.3" Color="#4DA8DA"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#3A6A9A" Offset="0"/>
                                            <GradientStop Color="#2E5077" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="#7CC4F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A3A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container with decorative border -->
    <Border Padding="0" Background="#080F1A">
        <Grid>
            <!-- Background Pattern Overlay -->
            <Border Opacity="0.03">
                <Border.Background>
                    <VisualBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
                        <VisualBrush.Visual>
                            <Path Data="M0,0 L25,25 L50,0 L50,50 L25,25 L0,50 Z" 
                                  Fill="#4DA8DA" Stroke="#4DA8DA" StrokeThickness="0.5"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Border.Background>
            </Border>

            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• EPIC HEADER â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Grid.Row="0" Background="{StaticResource EpicHeaderGradient}" 
                        CornerRadius="12" Padding="25" Margin="0,0,0,20"
                        BorderBrush="#4DA8DA" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.5" Color="#4DA8DA"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Shield Logo with Glow -->
                        <Border Grid.Column="0" Width="80" Height="80" Margin="0,0,25,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.7" Color="#4DA8DA"/>
                            </Border.Effect>
                            <Image Source="/Resources/shield.png" Stretch="Uniform"/>
                        </Border>

                        <!-- Title Section -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock FontSize="36" FontWeight="Bold" Foreground="White">
                                <Run Text="IMPERIAL" Foreground="#4DA8DA"/>
                                <Run Text=" SHIELD"/>
                            </TextBlock>
                            <TextBlock Text="âš”ï¸ Centro de Comando de Seguridad âš”ï¸" 
                                       FontSize="14" Foreground="#7EB8DC" Margin="0,5,0,0"
                                       FontStyle="Italic"/>
                        </StackPanel>

                        <!-- Status Badge -->
                        <Border x:Name="StatusBadge" Grid.Column="2" CornerRadius="25" Padding="20,10"
                                VerticalAlignment="Center"
                                BorderThickness="2" BorderBrush="#27AE60">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#1A4D2E" Offset="0"/>
                                    <GradientStop Color="#0D2818" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Margin="0,0,10,0">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#5CFF5C" Offset="0"/>
                                            <GradientStop Color="#27AE60" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#27AE60"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock x:Name="StatusText" Text="PROTEGIDO" 
                                           Foreground="#5CFF5C" FontWeight="Bold" FontSize="14"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• STATS ROW â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Defender Stat -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="DefenderIcon" Text="ðŸ›¡ï¸" FontSize="40" HorizontalAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#4DA8DA"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="DEFENSOR" HorizontalAlignment="Center" 
                                       Foreground="#7EB8DC" Margin="0,10,0,5" FontWeight="SemiBold"
                                       FontSize="11" />
                            <TextBlock x:Name="DefenderStatus" Text="ACTIVO" 
                                       FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"
                                       Foreground="#5CFF5C"/>
                        </StackPanel>
                    </Border>

                    <!-- Hosts Stat -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="5,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="HostsIcon" Text="ðŸ“œ" FontSize="40" HorizontalAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#F39C12"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="ARCHIVO HOSTS" HorizontalAlignment="Center" 
                                       Foreground="#7EB8DC" Margin="0,10,0,5" FontWeight="SemiBold"
                                       FontSize="11" />
                            <TextBlock x:Name="HostsStatus" Text="INTACTO" 
                                       FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"
                                       Foreground="#5CFF5C"/>
                        </StackPanel>
                    </Border>

                    <!-- Exclusions Stat -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="5,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="ExclusionsCount" Text="0" FontSize="40" 
                                       HorizontalAlignment="Center" Foreground="#4DA8DA" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#4DA8DA"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="EXCLUSIONES" HorizontalAlignment="Center" 
                                       Foreground="#7EB8DC" Margin="0,10,0,5" FontWeight="SemiBold"
                                       FontSize="11" />
                            <TextBlock x:Name="ExclusionsStatus" Text="NORMAL" 
                                       FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"
                                       Foreground="#5CFF5C"/>
                        </StackPanel>
                    </Border>

                    <!-- Connections Stat -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="10,0,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="ConnectionsCount" Text="0" FontSize="40" 
                                       HorizontalAlignment="Center" Foreground="#4DA8DA" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#4DA8DA"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="CONEXIONES" HorizontalAlignment="Center" 
                                       Foreground="#7EB8DC" Margin="0,10,0,5" FontWeight="SemiBold"
                                       FontSize="11" />
                            <TextBlock x:Name="ConnectionsStatus" Text="..." 
                                       FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• MAIN PANELS â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Arsenal (Tools) Panel -->
                    <Border Grid.Column="0" Style="{StaticResource RPGCard}" Margin="0,0,10,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="âš”ï¸" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="ARSENAL DE INVESTIGACIÃ“N" FontSize="18" FontWeight="Bold" 
                                           Foreground="#4DA8DA" VerticalAlignment="Center" />
                            </StackPanel>

                        <WrapPanel HorizontalAlignment="Center">
                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="ProcessViewer_Click" ToolTip="Visor de Procesos">
                                <StackPanel>
                                    <TextBlock Text="âš™ï¸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="PROCESOS" FontSize="10" HorizontalAlignment="Center" Foreground="#7EB8DC"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="NetworkViewer_Click" ToolTip="Monitor de Conexiones">
                                <StackPanel>
                                    <TextBlock Text="ðŸŒ" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="RED" FontSize="10" HorizontalAlignment="Center" Foreground="#7EB8DC"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="StartupManager_Click" ToolTip="Gestor de Inicio">
                                <StackPanel>
                                    <TextBlock Text="ðŸš€" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="INICIO" FontSize="10" HorizontalAlignment="Center" Foreground="#7EB8DC"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="ViewHosts_Click" ToolTip="Archivo HOSTS">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“œ" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="HOSTS" FontSize="10" HorizontalAlignment="Center" Foreground="#7EB8DC"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="ViewExclusions_Click" ToolTip="Exclusiones Defender">
                                <StackPanel>
                                    <TextBlock Text="ðŸ›¡ï¸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="EXCLUSIONES" FontSize="9" HorizontalAlignment="Center" Foreground="#7EB8DC"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource RPGButton}" Width="100" Height="100" Margin="5"
                                    Click="Privacy_Click" ToolTip="Centro de Privacidad"
                                    BorderBrush="#E74C3C" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="ðŸ‘ï¸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="PRIVACIDAD" FontSize="9" HorizontalAlignment="Center" Foreground="#E74C3C"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Defender Status Panel -->
                    <Border Grid.Column="1" Style="{StaticResource RPGCard}" Margin="10,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="ðŸ°" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="ESTADO DE LA FORTALEZA" FontSize="18" FontWeight="Bold" 
                                           Foreground="#4DA8DA" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Status Rows -->
                            <Border Background="#0D1B2A" CornerRadius="6" Padding="15,12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ProtecciÃ³n en Tiempo Real" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="RealTimeStatus" Grid.Column="1" Text="--" FontWeight="Bold" FontSize="13"/>
                                </Grid>
                            </Border>

                            <Border Background="#0D1B2A" CornerRadius="6" Padding="15,12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Monitor de Comportamiento" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BehaviorStatus" Grid.Column="1" Text="--" FontWeight="Bold" FontSize="13"/>
                                </Grid>
                            </Border>

                            <Border Background="#0D1B2A" CornerRadius="6" Padding="15,12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="VersiÃ³n de Firmas" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SignatureVersion" Grid.Column="1" Text="--" FontWeight="Bold" 
                                               Foreground="#E8F4FC" FontSize="13"/>
                                </Grid>
                            </Border>

                            <Border Background="#0D1B2A" CornerRadius="6" Padding="15,12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="AntigÃ¼edad de Firmas" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SignatureAge" Grid.Column="1" Text="--" FontWeight="Bold" FontSize="13"/>
                                </Grid>
                            </Border>

                            <Border Background="#0D1B2A" CornerRadius="6" Padding="15,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Ãšltimo Escaneo Completo" Foreground="#94A3B8" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="LastScan" Grid.Column="1" Text="--" FontWeight="Bold" 
                                               Foreground="#E8F4FC" FontSize="13"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• FOOTER â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Grid.Row="3" Margin="0,20,0,0" Padding="18,12" 
                        Background="#0A1525" CornerRadius="8"
                        BorderBrush="#1E3A5F" BorderThickness="1">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="VersionText" Text="Imperial Shield" 
                                       Foreground="#5A7A9A" FontWeight="SemiBold"/>
                            <TextBlock Text=" â€¢ " Foreground="#3A5A7A"/>
                            <Ellipse Width="8" Height="8" Fill="#27AE60" Margin="0,0,6,0" VerticalAlignment="Center">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#27AE60"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="Monitoreo Activo" Foreground="#27AE60" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="âš™ï¸ ConfiguraciÃ³n" Background="Transparent" 
                                    Foreground="#7EB8DC" BorderThickness="0" Cursor="Hand" 
                                    Margin="0,0,15,0" Click="Settings_Click" FontWeight="SemiBold"/>
                            <Button Content="ðŸ“¥ Minimizar" Background="Transparent" 
                                    Foreground="#7EB8DC" BorderThickness="0" Cursor="Hand"
                                    Click="MinimizeToTray_Click" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>

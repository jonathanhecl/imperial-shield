<Window x:Class="ImperialShield.Views.StartupManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Inicio - Imperial Shield" 
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Filter Toggle Button Style -->
        <Style x:Key="FilterToggle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E3A5F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4DA8DA"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A2744"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <ContextMenu x:Key="AppContextMenu">
            <MenuItem Header="ðŸ“‚ Ir a la ubicaciÃ³n del archivo" Click="OpenLocation_Click">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ“‚" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="âŒ Terminar proceso" Click="KillProcess_Click">
                <MenuItem.Icon>
                    <TextBlock Text="âŒ" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸš€ Gestor de Inicio" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,15,0"/>
                <Border Background="#213346" CornerRadius="12" Padding="12,4" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock x:Name="AppCountText" Text="0 apps" Foreground="#4DA8DA" FontWeight="Bold"/>
                </Border>
                <TextBlock x:Name="SuspiciousCountText" Text="" FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
            </StackPanel>
            <TextBlock Text="Controla los programas que arrancan con el sistema. Desactiva o termina aplicaciones innecesarias." 
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="#0F172A" CornerRadius="12" Padding="15,12" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <ToggleButton x:Name="FilterAll" Content="Todas" Style="{StaticResource FilterToggle}" 
                                  IsChecked="True" Click="Filter_Click"/>
                    <ToggleButton x:Name="FilterRunning" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#22C55E" Margin="0,0,6,0"/>
                            <TextBlock Text="Ejecutando"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="FilterEnabled" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#4DA8DA" Margin="0,0,6,0"/>
                            <TextBlock Text="Habilitadas"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="FilterDisabled" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#64748B" Margin="0,0,6,0"/>
                            <TextBlock Text="Deshabilitadas"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="FilterSuspicious" Style="{StaticResource FilterToggle}" Click="Filter_Click">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#EF4444" Margin="0,0,6,0"/>
                            <TextBlock Text="Sospechosas"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>

                <!-- Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatsText" Text="0 apps" Foreground="#64748B" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- List -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="0" Background="#0A0F1E">
            <DataGrid x:Name="StartupGrid" Margin="0" SelectionUnit="FullRow" CanUserAddRows="False"
                      Background="Transparent" BorderThickness="0" 
                      RowBackground="Transparent" AlternatingRowBackground="#0F172A"
                      HeadersVisibility="Column" GridLinesVisibility="None"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      UseLayoutRounding="True">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#111827"/>
                        <Setter Property="Foreground" Value="#94A3B8"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#1E293B"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="ContextMenu" Value="{StaticResource AppContextMenu}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ThreatLevel}" Value="High">
                                <Setter Property="Background" Value="#20E74C3C"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                
                <DataGrid.Columns>
                    <!-- Threat Indicator -->
                    <DataGridTemplateColumn Header="âš ï¸" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ThreatIcon}" FontSize="20" HorizontalAlignment="Center"
                                           ToolTip="{Binding ThreatText}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- App Info -->
                    <DataGridTemplateColumn Header="APLICACIÃ“N" Width="240">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center" ContextMenu="{StaticResource AppContextMenu}">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" FontSize="15"
                                               Cursor="Hand" ToolTip="Clic derecho para opciones">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="TextDecorations" Value="Underline"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Border Background="#1E293B" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                            <TextBlock Text="{Binding Type}" FontSize="11" Foreground="#4DA8DA" FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" Foreground="{Binding StatusColor}" FontWeight="Medium"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Firmante -->
                    <DataGridTemplateColumn Header="FIRMA DIGITAL" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SignatureText}" Foreground="{Binding SignatureColor}" 
                                           FontSize="13" TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding Publisher}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Ruta -->
                    <DataGridTemplateColumn Header="COMANDO / RUTA" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Command}" Foreground="#64748B" 
                                           TextTrimming="CharacterEllipsis" ToolTip="{Binding Command}"
                                           VerticalAlignment="Center" FontSize="12" FontFamily="Consolas"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Acciones -->
                    <DataGridTemplateColumn Header="ACCIONES" Width="210">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Toggle Deshabilitar/Habilitar -->
                                    <Button Content="{Binding ActionText}" 
                                            Click="Toggle_Click"
                                            Width="90" Height="28"
                                            FontSize="11" FontWeight="Bold"
                                            Cursor="Hand" Margin="0,0,8,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Foreground" Value="#F59E0B"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#78350F" BorderThickness="1">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#B45309"/>
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="#F59E0B"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                        <Setter Property="Foreground" Value="#22C55E"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border x:Name="border" CornerRadius="6" Background="#1E293B" BorderBrush="#14532D" BorderThickness="1">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="border" Property="Background" Value="#15803D"/>
                                                                            <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                                                                            <Setter Property="Foreground" Value="White"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    
                                    <!-- Kill -->
                                    <Button Content="Terminar" 
                                            Click="KillProcess_Click"
                                            Style="{StaticResource TerminateButton}"
                                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#111827" CornerRadius="0,0,8,8" Padding="20,15" Margin="0,0,0,0" BorderBrush="#1E293B" BorderThickness="1,0,1,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="#22C55E" Margin="0,0,12,0"/>
                    <TextBlock x:Name="LastUpdateText" Text="Ãšltima actualizaciÃ³n: --:--" Foreground="#94A3B8" FontSize="13" FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Actualizar" Click="Refresh_Click" Style="{StaticResource ModernButton}" 
                            Background="#1E293B" BorderBrush="#334155" BorderThickness="1" Foreground="#4DA8DA"
                            Width="140" Height="38" Margin="0,0,12,0" FontWeight="Bold"/>
                    <Button Content="Cerrar" Click="Close_Click" Style="{StaticResource ModernButton}" 
                            Width="110" Height="38" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

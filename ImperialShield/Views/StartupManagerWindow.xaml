<Window x:Class="ImperialShield.Views.StartupManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Inicio - Imperial Shield" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸš€ Gestor de Aplicaciones de Inicio" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <TextBlock Text="Gestiona quÃ© aplicaciones se ejecutan automÃ¡ticamente al iniciar Windows." Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
        </StackPanel>

        <!-- List -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Padding="0">
            <DataGrid x:Name="StartupGrid" Margin="0" SelectionUnit="FullRow" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="1.5*"/>
                    <DataGridTextColumn Header="UbicaciÃ³n" Binding="{Binding Type}" Width="100"/>
                    <DataGridTextColumn Header="Comando / Ruta" Binding="{Binding Command}" Width="3*"/>
                    <DataGridTemplateColumn Header="Acciones" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Eliminar" Click="Remove_Click" 
                                            Background="#E11D48" Foreground="White" Padding="8,4" 
                                            FontSize="12" Margin="5,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Actualizar Lista" Click="Refresh_Click" Style="{StaticResource ModernButton}" Width="150" Margin="0,0,10,0"/>
            <Button Content="Cerrar" Click="Close_Click" Style="{StaticResource ModernButton}" Background="{StaticResource SecondaryBrush}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="ImperialShield.Views.StartupManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Inicio - Imperial Shield" 
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindow}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <ContextMenu x:Key="AppContextMenu">
            <MenuItem Header="ðŸ“‚ Ir a la ubicaciÃ³n del archivo" Click="OpenLocation_Click">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ“‚" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="âŒ Terminar proceso" Click="KillProcess_Click">
                <MenuItem.Icon>
                    <TextBlock Text="âŒ" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸš€ Gestor de Inicio" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,15,0"/>
                    <Border Background="#213346" CornerRadius="12" Padding="12,4" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock x:Name="AppCountText" Text="0 apps" Foreground="#4DA8DA" FontWeight="Bold"/>
                    </Border>
                    <TextBlock x:Name="SuspiciousCountText" Text="" FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
                <TextBlock Text="Controla los programas que arrancan con el sistema. Desactiva o termina aplicaciones innecesarias." 
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,8,0,0"/>
            </StackPanel>
            
            <!-- Legend -->
            <Border Grid.Column="1" Background="#111827" CornerRadius="8" Padding="15,10" VerticalAlignment="Center" BorderBrush="#1E293B" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="LEYENDA DE SEGURIDAD" Foreground="#64748B" FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ›¡ï¸" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Verificado" Foreground="#4DA8DA" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="âœ…" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Seguro" Foreground="#27AE60" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="ðŸŸ¡" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Sin firma" Foreground="#F39C12" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”´" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Sospechoso" Foreground="#E74C3C" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Info Bar -->
        <Border Grid.Row="1" Background="#0F172A" CornerRadius="8" Padding="15,12" Margin="0,0,0,15" BorderBrush="#1E293B" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ’¡" Foreground="#4DA8DA" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <TextBlock Text="Usa el botÃ³n derecho sobre una aplicaciÃ³n para ver mÃ¡s opciones o abrir su ubicaciÃ³n." 
                           Foreground="#94A3B8" FontSize="13" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- List -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="0" Background="#0A0F1E">
            <DataGrid x:Name="StartupGrid" Margin="0" SelectionUnit="FullRow" CanUserAddRows="False"
                      Background="Transparent" BorderThickness="0" 
                      RowBackground="Transparent" AlternatingRowBackground="#0F172A"
                      HeadersVisibility="Column" GridLinesVisibility="None"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      UseLayoutRounding="True">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#111827"/>
                        <Setter Property="Foreground" Value="#94A3B8"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#1E293B"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="ContextMenu" Value="{StaticResource AppContextMenu}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ThreatLevel}" Value="High">
                                <Setter Property="Background" Value="#20E74C3C"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                
                <DataGrid.Columns>
                    <!-- Threat Indicator -->
                    <DataGridTemplateColumn Header="âš ï¸" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ThreatIcon}" FontSize="20" HorizontalAlignment="Center"
                                           ToolTip="{Binding ThreatText}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- App Info -->
                    <DataGridTemplateColumn Header="APLICACIÃ“N" Width="240">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center" ContextMenu="{StaticResource AppContextMenu}">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" FontSize="15"
                                               Cursor="Hand" ToolTip="Clic derecho para opciones">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="TextDecorations" Value="Underline"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Border Background="#1E293B" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                            <TextBlock Text="{Binding Type}" FontSize="11" Foreground="#4DA8DA" FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" Foreground="{Binding StatusColor}" FontWeight="Medium"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Firmante -->
                    <DataGridTemplateColumn Header="FIRMA DIGITAL" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SignatureText}" Foreground="{Binding SignatureColor}" 
                                           FontSize="13" TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding Publisher}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Ruta -->
                    <DataGridTemplateColumn Header="COMANDO / RUTA" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Command}" Foreground="#64748B" 
                                           TextTrimming="CharacterEllipsis" ToolTip="{Binding Command}"
                                           VerticalAlignment="Center" FontSize="12" FontFamily="Consolas"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Acciones -->
                    <DataGridTemplateColumn Header="ACCIONES" Width="210">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Toggle -->
                                    <Button Content="{Binding ActionText}" 
                                            Click="Toggle_Click"
                                            Width="95" Height="32"
                                            FontSize="12" FontWeight="Bold"
                                            Cursor="Hand" Margin="0,0,8,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border" CornerRadius="6" Background="{Binding ActionColor}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    
                                    <!-- Kill -->
                                    <Button Content="Terminar" 
                                            Click="KillProcess_Click"
                                            Style="{StaticResource TerminateButton}"
                                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#111827" CornerRadius="0,0,8,8" Padding="20,15" Margin="0,0,0,0" BorderBrush="#1E293B" BorderThickness="1,0,1,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="#22C55E" Margin="0,0,12,0"/>
                    <TextBlock x:Name="LastUpdateText" Text="Ãšltima actualizaciÃ³n: --:--" Foreground="#94A3B8" FontSize="13" FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Actualizar" Click="Refresh_Click" Style="{StaticResource ModernButton}" 
                            Background="#1E293B" BorderBrush="#334155" BorderThickness="1" Foreground="#4DA8DA"
                            Width="140" Height="38" Margin="0,0,12,0" FontWeight="Bold"/>
                    <Button Content="Cerrar" Click="Close_Click" Style="{StaticResource ModernButton}" 
                            Width="110" Height="38" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
